{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.ts", "node_modules"]
}
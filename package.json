{
  "name": "jest-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate codebase to run jest tests on a typescript codebase",
  "scripts": {
    "unit-test": "jest --verbose -c jest.unit.config.js",
    "component-test": "jest --verbose -c jest.component.config.js",
    "integration-test": "jest --verbose -c jest.integration.config.js"
  },
  "dependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
